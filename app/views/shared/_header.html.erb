<header role="banner">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <%= link_to "Blog", root_path, class: "navbar-brand"%>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto navbar-right">
        <% unless user_signed_in? %>
          <%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-default navbar-btn" %>
          <%= link_to 'Login', new_user_session_path, class: "btn btn-outline-primary navbar-btn" %>
        <% end %>
        <% if user_signed_in? %>
          <span class="navbar-text mr-1">Signed in as <%= current_user.email %></span>
        <% end %>
        <% if user_signed_in? %>
          <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "btn btn-outline-danger navbar-btn" %>
        <% end %>
      </ul>
    </div>
  </nav>
</header>