<%= link_to "New Article", new_article_path, class: "btn btn-primary", id: "new-article-btn" %>

<% @articles.each do |article| %>
  <div class="card mt-3">
    <div class="card-body">
      <div class="card-title">
        <%= link_to article.title, article_path(article) %>
      </div>
      <p class="card-text">
        <%= article.body %>
      </p>
    </div>
  </div>
<% end %>